{
  "Routes": [
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "UpstreamPathTemplate": "/api/products/{catchAll}",
      "DownstreamPathTemplate": "/{catchAll}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "product",
          "Port": 8080
        },
        {
          "Host": "product2",
          "Port": 8080
        }
      ],
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Limit": 10,
        "Period": "10s"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [ "product.getall" ]
      },
      "RouteClaimsRequirement": {
        "UserType": "registered"
      }
      //"ServiceName": "Product-WebAPI"
    },
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "UpstreamPathTemplate": "/api/baskets/{catchAll}",
      "DownstreamPathTemplate": "/{catchAll}",
      "DownstreamScheme": "http",
      //"ServiceName": "Basket-WebAPI"
      "DownstreamHostAndPorts": [
        {
          "Host": "basket",
          "Port": 8080
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "UpstreamPathTemplate": "/api/auth/{catchAll}",
      "DownstreamPathTemplate": "/{catchAll}",
      "DownstreamScheme": "http",      
      "DownstreamHostAndPorts": [
        {
          "Host": "auth",
          "Port": 8080
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://ocelot:8080",
    "RateLimitOptions": {
      "DisableRateLimitHeaders": false,
      "HttpStatusCode": 418
    }
    //"ServiceDiscoveryProvider": {
    //  "Host": "consul",
    //  "Port": 8500,
    //  "Type": "Consul"
    //}
  }
}